vendor(prop,args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	-o-{prop} args
	{prop} args

sans-serif()
	font-family sans-serif

*
	vendor(box-sizing, border-box)
	margin 0
	padding 0
	outline none

html
	font-size 12pt

body
	#aPRINT
		background gray
		
		.over
			background lighten(green,72%)
		
		.removable
			position relative
			.remove
				sans-serif()
				background white
				position absolute
				top 6px
				right 6px
				padding 3px 7px
				font-size 1rem
				font-weight 100
				color black
				cursor pointer
				&:hover
					background darken(red,24%)
					color white

		.page
			background white
			margin 2mm auto
			&.A4
				width 210mm
				height 297mm
				padding 15mm 20mm
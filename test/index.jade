			#view {
				width: 100%;
				height: 100%;
			}
			#left {
				background: white;
				position: relative;
				width: 320px;
				height: 100%;
				float: left;
				overflow-y: auto;
			}
			#left img {
				width: 100%;
				height: auto;
			}
			#right {
				width: 40%;
				height: 100%;
				float: left;
			}
			#print {
				width: 100%;
				height: 100%;
			}
			@media print {
				#left {
					display: none;
				}
				#right {
					width: 100%;
					height: auto;
				}
			}


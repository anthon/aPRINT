sans-serif()
	font-family sans-serif

pt = .3527778
// pageWidth = 90

// @media print
	// pageWidth = 100

// A4 w/h
// a4width = 210
// a4height = 297
// mm = ((100/a4width)*(pageWidth/100))
// pt = mm*pt

body
	
	.page
		&.A4
			font-size 0
			.header
			.left_column
			.right_column
				font-size 13pt
				line-height 18pt
			.header
				sans-serif()
				height 10%
				background green
				width 100%
				padding 6mm
				font-size 20pt
				font-weight 700
			.left_column
			.right_column
				height 90%
			.left_column
				// background red
				width (100/3)%
				.texts
					height 100%
					padding 0 4mm 0 0
			.right_column
				// background green
				width ((100/3)*2)%
				.images
					height 100%
					.image
						img
							max-width 100%
							height auto
							max-height 100%
						&.left
						&.right
						&.middle
							img
								max-width 50%
						&.right
							text-align right
						&.middle
							text-align center
			&.odd
				.left_column
				.right_column
					float left
			&.even
				.left_column
				.right_column
					float right
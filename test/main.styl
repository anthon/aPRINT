// @media print
	// pageWidth = 100

// A4 w/h
// a4width = 210
// a4height = 297
// mm = ((100/a4width)*(pageWidth/100))
// pt = mm*pt

body
	
	.page
		display flex
		flex-direction column
		padding 6mm
		&.A4
			.header_container
			.ingress
			.body
				font-size 13pt
				line-height 18pt
			.header_container
				sans-serif()
				// height 10%
				// background green
				width 100%
				padding 6mm
				display flex
				flex-direction row
				.header
				.list
					min-height 1.5em
					line-height 1.5em
					font-weight 700
				.header
					width ((100/3)*2)%
					font-size 20pt
				.list
					width (100/3)%
					font-size 11pt
			.ingress
				min-height 1.5em
			.body
				// background rgba(255,0,0,.24)
				flex 1
				display flex
				flex-direction row
				.column
					position relative
					&.one_third
						// background red
						width (100/3)%
					&.two_thirds
						// background green
						width ((100/3)*2)%
				.texts
					position absolute
					top 0
					left 0
					right 0
					bottom 0
					padding 0 4mm 0 0
				.images
					position absolute
					top 0
					left 0
					right 0
					bottom 0
					.image
						margin-bottom 3mm
						img
							max-width 100%
							height auto
							max-height 100%
						&:last-child
							margin-bottom 0
						&.left
						&.right
							img
								max-width 50%
						&.right
							text-align right
						&.middle
							text-align center
						&:before
							content attr(data-image-number)
							background red
							position absolute
							top 0
							left -1em
							padding 7px
							cursor pointer
			&.even
				.body
					flex-direction row-reverse
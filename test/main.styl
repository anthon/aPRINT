vendor(prop,args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	-o-{prop} args
	{prop} args

sans-serif-light()
	font-family 'Akkurat-Web', sans-serif
	font-weight 300
sans-serif()
	font-family 'Akkurat-Web', sans-serif
sans-serif-bold()
	font-family 'Akkurat-Web', sans-serif
	font-weight 600

monospace()
	font-family monospace

// pt = .3527778
// pageWidth = 90

// @media print
	// pageWidth = 100

// A4 w/h
a4width = 210
a4height = 297
// mm = ((100/a4width)*(pageWidth/100))
// pt = mm*pt

body
	sans-serif-light()
	ul
		list-style-type none
	ol
		list-style-position inside
	strong
		sans-serif-bold()
		font-weight 300
	.page
		position relative
		display flex
		flex-direction column
		padding 12mm 18mm 15mm 18mm
		font-size 0
		.header_container
		.ingress_container
		.body_container
			position relative
			min-height 0
		&.A4
			.image
				display flex
				flex-direction column
				padding-bottom 3mm
				.description
					font-size 7pt
					line-height 7.6pt
					padding-top 1mm
				>*
					min-width 0
					max-width 100%
					min-height 0
				img
					max-width 100%
					height auto
					max-height 100%
					width auto
				&.medium
					max-width 68%
				&.slim
					max-width 50%
			.columns
				flex 1 0 auto
				display flex
				flex-direction row
				max-width 100%
				.column
					width 100%
					&.half
						width 50%
						&:last-child
							padding-right 0
					&.two_thirds
						flex-shrink 0
						width 98mm
						padding-right 3mm
					&.border
						border-right .2pt solid black
			.timestamp
				monospace()
				position absolute
				padding 2mm .8mm
				font-size 6pt
				transform-origin top left
				transform rotate(90deg)
			.header_container
				flex 0 0 auto
				.header
					display inline-block
					min-height 16mm
					max-height 4em
					text-transform uppercase
			.ingress_container
				flex 0 1 auto
			.body_container
				flex 1 1 auto
			.body_container
				display flex
				flex 1 99 auto
				height 100%
		&.project
		&.theory
			.header_container
				.header
					min-width ((100/3)*2)%
					padding 3.5mm 3.5mm 2.5mm
					font-size 39pt
					line-height 38pt
					border .25pt solid black
			.ingress_container
			.body_container
				.content
				.list
					min-height 5em
					font-size 9pt
					line-height 12pt
				.content
					padding-top 3mm
					// p
					// ul
					// 	padding-bottom 1em
					.image
						padding 3mm 0	
						&:first-child
						& + .image
							padding-top 0 !important
						&:last-child
							padding-bottom 0 !important
				.list
					padding-top 2mm
					strong
						sans-serif-bold()
					ul
						li
							padding 1mm 0 1mm 2mm
							border-bottom .25pt solid black
				&:first-child
					.content
						padding-top 0
		&.project
			.ingress_container
				padding-bottom 2mm
				.content
					max-height 46%
		&.info
			.ingress_container
				.content
					max-height 60%
		&.theory
			// .body_container
			// 	.content
			// 		height 100%
		&.info
			.header_container
				margin-bottom 11mm
				.header
					width 100%
					font-size 18pt
					line-height 19pt
			.ingress_container
				z-index 1
				.content
					margin-top -11mm
					padding-top 11mm
					font-size 10.7pt
					line-height 15pt
					.image
					.paragraph
						padding-bottom 6mm
					.image
						.description
							display none
			.body_container
				.content
					font-size 9pt
					line-height 12pt

	.cover
		text-align right
		.page
			display inline-block
			text-align left
			padding 8.75mm 7.75mm 8.75mm 9.75mm !important
			ul
				li
					margin 2.25mm
					padding 7.5mm 6mm 6mm
					list-style-type none
					font-size 42pt
					line-height 43pt
					text-transform uppercase
					display inline-block
					border .25pt solid black
					span
						display inline-block
			.logo
			.imprint
				position absolute
				left 12.5mm
				bottom 6mm
				font-size 8pt
			.logo
				background-image url('/backnn/imgs/static/HM_Bildm_Trans.svg')
				background-size contain
				background-repeat no-repeat
				background-position left bottom
				width 41mm
				height 35mm
			&.back
				display none
			


@media print
	body
		.cover
			.page
				&.back
					display inline-block
		&.A4
			.cover
				width (a4width)mm
		&.A3
			.cover
				width (a4width*2)mm
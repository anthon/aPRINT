sans-serif()
	font-family sans-serif

pt = .3527778
pageWidth = 90

// A4 w/h
a4width = 210
a4height = 297
mm = ((100/a4width)*(pageWidth/100))

body
	
	.page
		&.A4
			font-size 0
			.header
			.left_column
			.right_column
				font-size (13*mm*pt)vw
				line-height (18*mm*pt)vw
			.header
				sans-serif()
				height 10%
				background green
				width (210*mm)vw
				padding (6*mm)vw
				font-size (20*mm*pt)vw
				font-weight 700
			.left_column
			.right_column
				height 90%
				display inline-block
				vertical-align top
			.left_column
				// background red
				width (100/3)%
				.texts
					height 100%
					padding 0 (4*mm)vw 0 0
			.right_column
				// background green
				width ((100/3)*2)%
				.images
					height 100%
					img
						max-width 100%
						height auto
						max-height 100%